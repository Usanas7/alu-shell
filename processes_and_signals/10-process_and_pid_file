#!/usr/bin/env bash
pidfile="/var/run/myscript.pid"

# Function to handle cleanup
cleanup() {
    echo "Cleaning up and terminating script..."
    rm -f "$pidfile"
    exit 0
}

# Trap signals and call cleanup function
trap cleanup SIGQUIT SIGTERM

# Display PID and create PID file
echo $$ > "$pidfile"
echo "PID: $$"

# Display messages indefinitely
while true; do
    echo "To infinity and beyond..."
    sleep 1
done

# Additional trap statements for other signals
trap 'echo "I hate the kill command!"' SIGTERM
trap 'echo "Y U no love me?!"' SIGINT

# Sleep indefinitely to keep the script running
sleep infinity


